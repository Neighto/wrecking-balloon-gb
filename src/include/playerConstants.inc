; PLAYER CONSTANTS

PLAYER_START_LIVES EQU 1
PLAYER_MAX_LIVES EQU 9

PLAYER_DEFAULT_SPEED EQU 2

PLAYER_BALLOON_OAM_SPRITES EQU 2
PLAYER_BALLOON_OAM_BYTES EQU PLAYER_BALLOON_OAM_SPRITES * 4
PLAYER_CACTUS_OAM_SPRITES EQU 2
PLAYER_CACTUS_OAM_BYTES EQU PLAYER_CACTUS_OAM_SPRITES * 4

PLAYER_START_X EQU 80
PLAYER_START_Y EQU 68
PLAYER_MAX_DRIFT_X EQU 2
PLAYER_MAX_DRIFT_Y EQU 1

PLAYER_MOVE_TIME EQU %00000001
PLAYER_RESPAWN_TIME EQU 150
PLAYER_POPPING_BALLOON_ANIMATION_TIME EQU %00000111

PLAYER_CACTUS_WIDTH EQU 16
PLAYER_CACTUS_HEIGHT EQU 12
PLAYER_BALLOON_WIDTH EQU 16
PLAYER_BALLOON_HEIGHT EQU 16

; BOOST

PLAYER_BOOST_EMPTY EQU 250
PLAYER_BOOST_QUARTER EQU PLAYER_BOOST_EMPTY / 4
PLAYER_BOOST_25_PERC EQU PLAYER_BOOST_EMPTY - (PLAYER_BOOST_QUARTER * 1)
PLAYER_BOOST_50_PERC EQU PLAYER_BOOST_EMPTY - (PLAYER_BOOST_QUARTER * 2)
PLAYER_BOOST_75_PERC EQU PLAYER_BOOST_EMPTY - (PLAYER_BOOST_QUARTER * 3)
PLAYER_BOOST_FULL EQU 0
PLAYER_BOOST_EFFECT_ENDS EQU PLAYER_BOOST_EMPTY - 20

; ATTACK

PLAYER_ATTACK_EMPTY EQU 250
PLAYER_ATTACK_QUARTER EQU PLAYER_ATTACK_EMPTY / 4
PLAYER_ATTACK_25_PERC EQU PLAYER_ATTACK_EMPTY - (PLAYER_ATTACK_QUARTER * 1)
PLAYER_ATTACK_50_PERC EQU PLAYER_ATTACK_EMPTY - (PLAYER_ATTACK_QUARTER * 2)
PLAYER_ATTACK_75_PERC EQU PLAYER_ATTACK_EMPTY - (PLAYER_ATTACK_QUARTER * 3)
PLAYER_ATTACK_FULL EQU 0

; INVINCIBLE

INVINCIBLE_RESPAWN_TIME EQU 150
INVINCIBLE_BLINK_FASTER_TIME EQU 40
INVINCIBLE_BLINK_NORMAL_SPEED EQU %00000100
INVINCIBLE_BLINK_FAST_SPEED EQU %00000010

; STUNNED

PLAYER_STUNNED_TIME EQU 48
PLAYER_STUNNED_SLOW_TIME EQU %00000011

; TILES

PLAYER_BALLOON_TILE EQU $02
PLAYER_CACTUS_TILE EQU $04
PLAYER_CACTUS_SCREAMING_TILE EQU $06
PLAYER_SECRET_BALLOON_TILE EQU $0C
PLAYER_SECRET_CACTUS_TILE EQU $0E
PLAYER_CACTUS_HAPPY_TILE EQU $14
PLAYER_BALLOON_TURNING_TILE_1 EQU $08
PLAYER_BALLOON_TURNING_TILE_2 EQU $0A
PLAYER_SECRET_BALLOON_TURNING_TILE_1 EQU $10
PLAYER_SECRET_BALLOON_TURNING_TILE_2 EQU $12

; BULLET

PLAYER_BULLET_TILE EQU $16
PLAYER_BULLET_TIME EQU %00000001
PLAYER_BULLET_SPEED EQU 3
PLAYER_BULLET_WIDTH EQU 8
PLAYER_BULLET_HEIGHT EQU 4

; PLAYER FLAG STATE

PLAYER_FLAG_ACTIVE_MASK EQU %00000001
PLAYER_FLAG_ACTIVE_BIT EQU 0

PLAYER_FLAG_ALIVE_MASK EQU %00000010
