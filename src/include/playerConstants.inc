PLAYER_SPECIAL_BLOCK_1_25 EQU PLAYER_SPECIAL_PHASE_AMOUNT * 7
; BLOCK 2
PLAYER_SPECIAL_BLOCK_2_100 EQU PLAYER_SPECIAL_PHASE_AMOUNT * 0
PLAYER_SPECIAL_BLOCK_2_75 EQU PLAYER_SPECIAL_PHASE_AMOUNT * 1
PLAYER_SPECIAL_BLOCK_2_50 EQU PLAYER_SPECIAL_PHASE_AMOUNT * 2
PLAYER_SPECIAL_BLOCK_2_25 EQU PLAYER_SPECIAL_PHASE_AMOUNT * 3
; BOOST-SPECIFIC
PLAYER_BOOST_EFFECT_ENDS EQU PLAYER_SPECIAL_EMPTY - 20

; INVINCIBLE

